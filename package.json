{
  "name": "@callstack/react-native-brownfield",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Michal Chudziak <mike.chudziak@callstack.com>",
  "contributors": [
    "Piotr Drapich <piotr.drapich@callstack.com>"
  ],
  "homepage": "https://github.com/callstack/react-native-brownfield",
  "description": "Brownfield helpers for React Native",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "scripts": {
    "lint": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "release": "release-it",
    "prepare": "bob build",
    "brownfield:plugin:publish:local": "bash ./gradle-plugins/publish-to-maven-local.sh"
  },
  "keywords": [
    "react-native-brownfield",
    "react native brownfield",
    "native",
    "react native integration"
  ],
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "resolutions": {
    "@types/react": "19.0.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native/babel-preset": "0.78.0",
    "@react-native/eslint-config": "0.78.0",
    "@react-native/typescript-config": "0.78.0",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/react": "^19.0.0",
    "@types/react-test-renderer": "^19.0.0",
    "babel-plugin-module-resolver": "5.0.0",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.6.3",
    "prettier": "^3.5.3",
    "react": "19.0.0",
    "react-native": "0.78.0",
    "react-native-builder-bob": "^0.37.0",
    "react-test-renderer": "19.0.0",
    "release-it": "^18.1.2",
    "typescript": "5.0.4"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "codegenConfig": {
    "name": "RNBrownfieldSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.callstack.reactnativebrownfield"
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@3.6.4"
}
